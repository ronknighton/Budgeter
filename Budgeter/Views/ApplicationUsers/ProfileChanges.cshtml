@model Budgeter.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<div class="container ">
    <div class="col-md-offset-3 col-md-6">
        <div class="tile">
            <h1 class="text-danger">@ViewBag.AdminError</h1>
            <h2>User Details</h2>

           

                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.LastName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LastName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.FullName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FullName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <!--Start Delete-->


                </dl>
          
            <div>
                <h4>Change your profile picture or Nick-Name</h4>
                <hr />
                @using (Html.BeginForm("ProfileChanges", "ApplicationUsers", new { FullName = "FullName", userId = Model.Id }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "Multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <h6 class="center p-10">Enter New Nick-Name</h6>
                    <div class="form-group">
                        @Html.Label("Nick Name", new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBox("FullName", null, new { @class = "form-control" })
                            <h4> @TempData["FullNameError"]</h4>
                        </div>
                    </div>
                    <h6 class="center">Upload New Profile Image</h6>
                    <div class="form-group row p-10">
                        @Html.Label("Change Profile Image", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <input name="image" type="file" class="form-control" id="fileUpload" />
                            <h4> @TempData["FileError"]</h4>
                            @*@Html.ValidationMessageFor(model => model.FileUrl, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Make Changes" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

