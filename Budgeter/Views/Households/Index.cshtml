@model IEnumerable<Budgeter.Models.Household>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>Household Members</th>
        <th>Household Options</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                <ul>
                    @foreach (var member in item.Members)
                    {
                        <li>@member.FullName</li>
                    }
                </ul>
            </td>
            <td>
                @Html.ActionLink("Edit Household Name", "Edit", new { id = item.Id }) <br />
                @Html.ActionLink("Send Invite to Join Household", "SendInvitation", "Invitations", new { hId = item.Id }, null) <br />
                @Html.ActionLink("Household Details/Member Changes", "Details", new { id = item.Id }) <br />
                @Html.ActionLink("Delete Household", "Delete", new { id = item.Id }) 
            </td>
        </tr>
    }

</table>
