@model IEnumerable<Budgeter.Models.Budget>
@using Budgeter.Helpers
@{
    ViewBag.Title = "Index";
    var userHelper = new UsersHelper();

}

<h2>Budgets Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Household.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>Options</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Household.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) <br />
            @if (userHelper.IsHOH())
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br />

                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }

        </td>
    </tr>
    }

</table>
