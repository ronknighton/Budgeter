@section Scripts{
    <script type="text/javascript">

        $(document).ready(function () {

            /* Get iframe src attribute value i.e. YouTube video url

            and store it in a variable */
            var url = "";


            //var url = $("#LoginVideo").attr('src');
            //url = $("#AddMembersVideo").attr('src');
            //url = $("#AddAccountVideo").attr('src');
            //url = $("#TransactionsVideo").attr('src');
            //url = $("#ChartsVideo").attr('src');



            /* Assign empty url value to the iframe src attribute when

            modal hide, which stop the video playing */

            $("#Login").on('hide.bs.modal', function () {
                $("#LoginVideo").attr('src', '');
            });
            $("#Login").on('show.bs.modal', function () {
                url = $("#LoginVideo").attr('src');
                $("#LoginVideo").attr('src', url);
            });

            $("#AddMembers").on('hide.bs.modal', function () {
                $("#AddMembersVideo").attr('src', '');
            });
            $("#AddMembers").on('show.bs.modal', function () {
                url = $("#AddMembersVideo").attr('src');
                $("#AddMembersVideo").attr('src', url);

            $("#AddAccount").on('hide.bs.modal', function () {
                $("#AddAccountVideo").attr('src', '');
            });
            $("#AddAccount").on('show.bs.modal', function () {
                url = $("#AddAccountVideo").attr('src');
                $("#AddAccountVideo").attr('src', url);

            $("#Transaction").on('hide.bs.modal', function () {
                $("#TransactionVideo").attr('src', '');
            });
            $("#AddAccount").on('show.bs.modal', function () {
                url = $("#AddAccountVideo").attr('src');
                $("#AddAccountVideo").attr('src', url);

            $("#Charts").on('hide.bs.modal', function () {
                $("#ChartsVideo").attr('src', '');
            });
            $("#Charts").on('show.bs.modal', function () {
                url = $("#ChartsVideo").attr('src');
                $("#ChartsVideo").attr('src', url);



           

        });

    </script>
}

