@model Budgeter.Models.Transaction

@{
    ViewBag.Title = "Delete";
}

<div class="col-md-offset-4 col-md-4">
    <div class="tile">
        <h2 class="center">Delete Transaction</h2>

        <h3 class="text-danger center">Are you sure you want to delete this?</h3>


        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Bank Account")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BankAccount.Name)
            </dd>

            <dt>
                @Html.DisplayName("Budget Item")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BudgetItem.Name)
            </dd>

            <dt>
                @Html.DisplayName("Entered By")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EnteredBy.FullName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IncomeExpense.Type)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IncomeExpense.Type)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Amount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Amount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Reconciled)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Reconciled)
            </dd>

            <dt>
                @Html.DisplayName("Rec Amount")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ReconciledAmount)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> 
                @Html.ActionLink("Back to Transactions", "Index", null, new { @class = "btn btn-sm" })
            </div>
        }

    </div>
</div>
