@model Budgeter.Models.BudgetItemCategory

@{
    ViewBag.Title = "Delete";
}
<div class="col-md-offset-4 col-md-4">
    <h2 class="center">Delete Category</h2>

    <h3 class="center">Are you sure you want to delete this?</h3>
    <div>
        
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                Budget Items
            </dt>
            <dd>@{ var count = 0;}
                @foreach(var item in Model.BudgetItems.Where(i => i.Active))
                {
                    @item.Name<br />
                    count++;
                }
            </dd>

        </dl>
        @if(count > 0)
        {
            <h3 class="text-danger center">The above @count items will aslo be deleted!</h3>
            <h3 class="text-danger center">Transactions associated with these items will not tracked in the budget!!</h3>
        }
        <h1></h1>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to Budget", "Details", "Budgets", new { id = (int)TempData["BudgetId"] }, null)
            </div>
        }
    </div>
    </div>